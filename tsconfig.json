{
  "compilerOptions": {    
    "target": "es2017",                                  
    "lib": ["es2017"],
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "module": "commonjs",
    "experimentalDecorators": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                   
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@config": ["config"],
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"],
      "@services/*": ["services/*"],
      "@routes/*": ["routes/*"],
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@exceptions/*": ["exceptions/*"],
      "@middlewares/*" : ["middlewares/*"],
      "@dtos/*" : ["dtos/*"]
    }

  }
  
}
